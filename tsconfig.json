{
  "version": "^5.0.4",
  "compilerOptions": {
    "strict": true,
    "strictFunctionTypes": false,
    "module": "ESNext",
    "target": "ESNext",
    "skipLibCheck": true, //ignore check in node_module
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Node",
    "types": ["node", "vite/client"],
    "lib": ["DOM", "ESNext"], //Dom Process
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "extends": [
    "@tsconfig/node18/tsconfig.json",
    "@vue/tsconfig/tsconfig.dom.json"
  ],
  "exclude": ["node_modules", "dist", "**/*.js", "**/*.md", "src/**/*.md"],
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "types/**/*.d.ts",
    "vite.config.ts"
  ]
}
